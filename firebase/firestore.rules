rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // 집계 통계 (모든 인증 사용자 읽기 가능, Functions만 쓰기)
    match /stats_global/{docId} {
      allow read: if isSignedIn();
      allow write: if false; // Cloud Functions에서만 작성
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);

      match /radio_favorites/{favoriteId} {
        allow read, write: if isOwner(userId);
      }

      match /stats/{statId} {
        allow read, write: if isOwner(userId);
      }

      match /level/{levelId} {
        allow read, write: if isOwner(userId);
      }

      match /advice/{adviceId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /diaries/{docId} {
      allow read: if isSignedIn() && isOwner(resource.data.userId);
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update: if isSignedIn() && isOwner(request.resource.data.userId) && isOwner(resource.data.userId);
      allow delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    match /learning_archive/{docId} {
      allow read: if isSignedIn() && isOwner(resource.data.userId);
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update: if isSignedIn() && isOwner(request.resource.data.userId) && isOwner(resource.data.userId);
      allow delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    match /ai_corrections/{docId} {
      allow read: if isSignedIn() && isOwner(resource.data.userId);
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update: if isSignedIn() && isOwner(request.resource.data.userId) && isOwner(resource.data.userId);
      allow delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    match /quizzes/{docId} {
      allow read: if isSignedIn() && isOwner(resource.data.userId);
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update: if isSignedIn() && isOwner(request.resource.data.userId) && isOwner(resource.data.userId);
      allow delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    match /speaking_sessions/{docId} {
      allow read: if isSignedIn() && isOwner(resource.data.userId);
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update: if isSignedIn() && isOwner(request.resource.data.userId) && isOwner(resource.data.userId);
      allow delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    match /speaking_feedback/{docId} {
      allow read: if isSignedIn() && isOwner(resource.data.userId); // feedback often has userId field if not we join via sessionId, but assuming feedback has userId akin to others or we check logic
      // Note: In PRD feedback has sessionId. If we want strict owner check via sessionId, we need a get().
      // For MVP/performance, we can add userId to feedback documents as well or just rely on parent session knowledge if implemented as subcollection.
      // PRD says "speaking_feedback" is a top collection. Let's assume we add "userId" to it for easier security rules, or we just trust the creation.
      // Let's stick to the convention of adding userId to the doc for easier rules.
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid);
      allow create: if isSignedIn() && (request.resource.data.userId == request.auth.uid);
      allow update: if isSignedIn() && (request.resource.data.userId == request.auth.uid);
      allow delete: if isSignedIn() && (resource.data.userId == request.auth.uid);
    }
  }
}
